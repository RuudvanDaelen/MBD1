<?xml version='1.0' encoding='utf-8'?>
<widget id="nl_avans_mbd1_2060492_rdaelen" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Pokedex</name>
    <description>Mobile Development 1 - Pokedex</description>
    <author email="rvdaelen@hotmail.com">Ruud van Daelen</author>
    <content src="index.html" />

    <!--<preference name="permissions" value="none"/> Helemaal geen permissies-->
    <feature name="http://api.phonegap.com/1.0/network"/> <!--Network permissions-->
    <feature name="http://api.phonegap.com/1.0/geolocation"/> <!--Geolocation permissions-->


    <gap:plugin name="org.apache.cordova.splashscreen" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="5000" />

    <gap:plugin name="org.apache.cordova.geolocation" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />

    <icon src="icon.png" />
    <gap:splash src="splash.png" />

    <access origin="*"/>
    <plugin name="cordova-plugin-whitelist" version="1"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
</widget>
